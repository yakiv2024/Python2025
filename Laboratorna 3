t = input("Введіть слово: ")

if len(t) > 8:
    print("Весь рядок окрім перших восьми символів:", t[:8])
else:
    print("Слово закоротке для виконання зрізу")


r = input("Введіть речення: ")
words = r.split()
words.sort(key=len)

print("Слова у порядку неспадання довжин:")
for word in words:
    print(word)



word = input("Введіть слово: ")

if word[0].isupper():
    print("Слово починається з великої літери")
else:
    print("Слово не починається з великої літери")
